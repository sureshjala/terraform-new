pipeline {
    agent {label "DOCKER" }
    stages {
        stage ('git scm') {
            steps {
                git branch: 'master', url: 'https://github.com/sureshjala/terraform-new.git'
            }
        }
        stage ('terraform init') {
            steps {
                sh "terraform init"
            }
        }
        stage ('terraform validate') {
            steps {
                sh "terraform validate"
            }
        }
    }
}